{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "*": "ask",
    "read": "allow",
    "edit": "allow",
    "write": "allow",
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "webfetch": "allow",
    "websearch": "allow",
    "codesearch": "allow",
    "bash": {
      "*": "ask",
      "pwd": "allow",
      "pwd *": "allow",
      "ls": "allow",
      "ls *": "allow",
      "git status": "allow",
      "git status *": "allow",
      "git diff": "allow",
      "git diff *": "allow",
      "git log": "allow",
      "git log *": "allow",
      "git show": "allow",
      "git show *": "allow",
      "git add": "allow",
      "git add *": "allow",
      "git commit": "allow",
      "git commit *": "allow",
      "git restore --staged *": "allow",
      "git restore *": "allow",
      "git switch -c *": "allow",
      "git switch *": "allow",
      "git revert *": "allow",
      "git stash push *": "allow",
      "git stash apply *": "allow",
      "git stash pop": "allow",
      "gh pr view": "allow",
      "gh pr view *": "allow",
      "rg": "allow",
      "rg *": "allow",
      "fd": "allow",
      "fd *": "allow",
      "which *": "allow",
      "type *": "allow",
      "rm *": "deny",
      "rmdir *": "deny",
      "unlink *": "deny",
      "git clean *": "deny",
      "git reset --hard *": "deny",
      "gh pr create": "deny",
      "gh pr create *": "deny"
    }
  },
  "agent": {
    "ask": {
      "description": "Codebase-independent chat-only assistant",
      "mode": "primary",
      "prompt": "You are a chat-only assistant. Focus on conversation and general guidance. Do not use tools, do not inspect files, do not run commands, and do not rely on repository context unless the user explicitly asks to switch to a coding-oriented agent.",
      "tools": {
        "*": false
      }
    }
  }
}
