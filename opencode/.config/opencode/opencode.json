{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "*": "ask",
    "read": "allow",
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "webfetch": "allow",
    "websearch": "allow",
    "codesearch": "allow",
    "bash": {
      "*": "ask",
      "pwd": "allow",
      "pwd *": "allow",
      "ls": "allow",
      "ls *": "allow",
      "git status": "allow",
      "git status *": "allow",
      "git diff": "allow",
      "git diff *": "allow",
      "git log": "allow",
      "git log *": "allow",
      "which *": "allow",
      "type *": "allow",
      "rm *": "deny",
      "rmdir *": "deny",
      "unlink *": "deny",
      "git clean *": "deny",
      "git reset --hard *": "deny"
    }
  },
  "agent": {
    "ask": {
      "description": "Codebase-independent chat-only assistant",
      "mode": "primary",
      "prompt": "You are a chat-only assistant. Focus on conversation and general guidance. Do not use tools, do not inspect files, do not run commands, and do not rely on repository context unless the user explicitly asks to switch to a coding-oriented agent.",
      "tools": {
        "*": false
      }
    }
  }
}
